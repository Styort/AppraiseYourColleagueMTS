<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/help_detail_iv"
        android:layout_width="match_parent"
        android:src="@drawable/rez"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:layout_weight="0.5" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">

            <ImageView
                android:id="@+id/image_help_iv"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/r1" />

            <TextView
                android:id="@+id/title_help_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/image_help_iv"
                android:layout_marginLeft="5dp"
                android:layout_toEndOf="@+id/image_help_iv"
                android:layout_toRightOf="@+id/image_help_iv"
                android:text="Оценка по ценностям ПРОСТО"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/description_help_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/image_help_iv"
                android:layout_marginTop="10dp"
                android:text="Оцените своего коллегу по ценностям ПРОСТО, используя критерии оценки, комментарии и фото. Подробнее о критериях см. в разделе Критерии оценки." />
        </RelativeLayout>
    </ScrollView>

    <TextView
        android:id="@+id/page_number_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="1 из 5"
        android:gravity="center"
        android:textSize="16sp" />
</LinearLayout>